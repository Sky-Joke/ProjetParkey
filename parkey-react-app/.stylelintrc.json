{
  "extends": ["stylelint-config-standard","stylelint-config-tailwindcss"],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer",
        "config"
      ]
    }]
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "build/**",
    "dist/**"
  ]
}
